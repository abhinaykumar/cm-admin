.cm-admin-form
  = simple_form_for([:admin, @<%= name.singularize %>]) do |f|
    = f.error_notification
    .custom-validations.error-color
    <% options[:column_names].each do |column_name| %>
      <% column_name_arr = column_name.split(':') %>
      <% case column_name_arr[1]
      when 'input-integer' %>
        .form-field
          .form-label
            | <%= column_name_arr[0].titleize %>
          .form-input
            = f.input :<%= column_name_arr[0] %>, label: false, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, placeholder: '<%= column_name_arr[0].gsub('_', ' ').titleize %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
            .<%= column_name_arr[0] %>.error-color.hidden
                p Please fill height
      <% when 'input-string' %>
        .form-field
          .form-label
            | <%= column_name_arr[0].titleize %>
          .form-input
            = f.input :<%= column_name_arr[0] %>, label: false, input_html: { data: {class_name: '<%= column_name_arr[0] %>'}, placeholder: '<%= column_name_arr[0].gsub('_', ' ').titleize %>' }
            .<%= column_name_arr[0] %>.error-color.hidden
                p Please fill height
      <% when 'single-select' %>
        .form-field
          .form-label
            | <%= column_name_arr[0].titleize %>
          .form-input
            = f.input :<%= column_name_arr[0] %>, as: :select, label: false, collection: [], input_html: { class: "select2-single"}, include_blank: "Select <%= column_name_arr[0].gsub('_', ' ').titleize %>"
            .<%= column_name_arr[0] %>.error-color.hidden
                p Please fill height
      <% when 'multi-select' %>
        .form-field
          .form-label
            | <%= column_name_arr[0].titleize %>
          .form-input
            = f.input :<%= column_name_arr[0] %>, as: :select, label: false, collection: [], input_html: { class: "select2-single"}, include_blank: "Select <%= column_name_arr[0].gsub('_', ' ').titleize %>", multiple: true
            .<%= column_name_arr[0] %>.error-color.hidden
                p Please fill height
      <% when 'checkbox' %>
        .form-field
          = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, placeholder: '<%= column_name_arr[0].gsub('_', ' ').titleize %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
          label.radio-label for="male"  Male
      <% when 'radio' %>
        .form-field
          = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, placeholder: '<%= column_name_arr[0].gsub('_', ' ').titleize %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
          label.radio-label for="male"  Male
      <% when 'datepicker' %>
        .form-field
          .form-label
            | <%= column_name_arr[0].titleize %>
          .form-input
            = f.input :<%= column_name_arr[0] %>, as: :string, label: false, input_html: { data: {class_name: '<%= column_name_arr[0] %>'}, class: 'datepicker', value: @<%= name.singularize %>.<%= column_name_arr[0] %>&.strftime('%d/%m/%Y') }, placeholder: '<%= column_name_arr[0].gsub('_', ' ').titleize %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
            .<%= column_name_arr[0] %>.error-color.hidden
                p Please fill height
      <% when 'file' %>
        .form-field
          .form-label
            | Upload file
          .file-upload
            = f.file_field :<%= column_name_arr[0] %>, input_html: {}
      <% end %>
    <% end  %>

    = simple_form_for([:admin, @<%= name.singularize %>]) do |f|
      .flag-alert.mb-4
        p.alert-header
            span
              i.fa.fa-exclamation-triangle
            | Attention
        .alert-body
          p.body-title 
            | Error heading
          p.body-info 
            | The details of the error would be explained in this line. It could also be listed out as points on below the other if there are multiple reasons.

        <% options[:column_names].each do |column_name| %>
          <% column_name_arr = column_name.split(':') %>
          <% case 'string'
            when 'integer' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper           
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'string' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
              .field-input-wrapper
                = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }
                .<%= column_name_arr[0] %>.hidden
                  p.error-msg
                    span
                      i.fa.fa-exclamation-circle
                    | Error message
          <% when 'select_multiple' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper                  
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'select_single' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper           
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'checkbox' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper            
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'datetime' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper            
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'file' %>
            = f.label :file, "Upload .pdf or .ai "
            = f.file_field :file, input_html: {}
          <% end %>
        <% end  %>

        .form-actions
          = f.button :submit, "Create new <%= name.singularize %>"
