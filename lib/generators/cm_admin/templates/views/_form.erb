.form-wrapper
  .form-container
    p.form-tile 
      <%= name.singularize %>

    = simple_form_for([:admin, @<%= name.singularize %>]) do |f|
      .flag-alert.mb-4
        p.alert-header
            span
              i.fa.fa-exclamation-triangle
            | Attention
        .alert-body
          p.body-title 
            | Error heading
          p.body-info 
            | The details of the error would be explained in this line. It could also be listed out as points on below the other if there are multiple reasons.

        <% options[:column_names].each do |column_name| %>
          <% column_name_arr = column_name.split(':') %>
          <% case 'string'
            when 'integer' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper           
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'string' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
              .field-input-wrapper
                = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }
                .<%= column_name_arr[0] %>.hidden
                  p.error-msg
                    span
                      i.fa.fa-exclamation-circle
                    | Error message
          <% when 'select_multiple' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper                  
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'select_single' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper           
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'checkbox' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper            
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'datetime' %>
            .form-field.mt-3
              .field-label-wrapper
                label.field-label 
                  | <%= column_name_arr[0].titleize %>
            .field-input-wrapper            
              = f.input :<%= column_name_arr[0] %>, input_html: { data: {class_name: '<%= column_name_arr[0] %>'} }, wrapper: :form_string_custom, placeholder: '<%= column_name_arr[0] %>', required: true, error_message_html: {class: "<%= column_name_arr[0] %>"}
              .<%= column_name_arr[0] %>.hidden
                p.error-msg
                  span
                    i.fa.fa-exclamation-circle
                  | Error message
          <% when 'file' %>
            = f.label :file, "Upload .pdf or .ai "
            = f.file_field :file, input_html: {}
          <% end %>
        <% end  %>

        .form-actions
          = f.button :submit, "Create new <%= name.singularize %>"
          / # f.button :submit, "Create new <%= name.singularize %>", class: " cta-btn mt-3", data: {class_name: 'product_template-form',path_name: "admin/products/#{@product.id}/templates", button_name: 'Create new template'}
